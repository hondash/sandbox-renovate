{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "labels": ["dependencies"],
  "force": {
    "constraints": {
      "node": "< 15.0.0"
    }
  },
  "additionalBranchPrefix": "{{parentDir}}-",
  "commitMessagePrefix": "[{{parentDir}}] ",
  "packageRules": [
    {
      "matchPaths": ["modules/sample-v14/package.json"],
      "addLabels": ["module v14"]
    },
    {
      "matchPaths": ["modules/sample-v16/package.json"],
      "addLabels": ["module v16"]
    }
  ]
}
